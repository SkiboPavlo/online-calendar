<p id="notice"><%= notice %></p>

<h1>Calendars</h1>
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <% if user_signed_in? %>
    <tbody>
      <% @calendars.each do |calendar| %>
        <tr>
          <td><%= calendar.name %></td>
          <td><%= calendar.status %></td>
          <td><%= link_to 'Made public', collective_status_calendar_path(calendar), class: 'btn btn-default' %></td>
          <td><%= link_to 'Made personal', personal_status_calendar_path(calendar), class: 'btn btn-default' %></td>
          <td><%= link_to 'Show', calendar, class: 'btn btn-danger' %></td>
          <td><%= link_to 'Edit', edit_calendar_path(calendar), class: 'btn btn-danger' %></td>
          <td><%= link_to 'Destroy', calendar, method: :delete, data: { confirm: 'Are you sure?' },
                                               class: 'btn btn-danger' %></td>
        </tr>
      <% end %>
    </tbody>
    <br>
  <% else %>
    <% @calendars.where(status: 'collective').each do |calendar| %>
      <tr>
        <td><%= calendar.name %></td>
        <td><%= calendar.status %></td>
      </tr>
    <% end %>
  <% end %>
</table>
<br>
<div class="btn btn-warning">
  <%= link_to 'New Calendar', new_calendar_path %>
</div>
